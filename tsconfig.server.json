{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["ES2019"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "payload/**/*",
    "payload.config.ts",
    "server.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "payload/hooks/videoOptimization.ts",
    "payload/hooks/videoOptimizationAfter.ts"
  ]
}
